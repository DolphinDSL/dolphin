//A one drone test mission

homePos = pos {
   lat 41.15242
   lon (-8.64096)
   height 200
}

v = pick {

    type 'UAV'

    timeout 30.seconds

}

areaSurvey = mission {

    name "Survey Land"

    home homePos

    takeOff homePos

    //Survey an area 10000 meters long and 5000 meters wide
    surveyArea 10000, 5000, "EAST"

    returnHomeAndLand()

}

execute areaSurvey[v]